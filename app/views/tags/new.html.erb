<h1> Tags </h1>

<% if @tag.errors.any? %>
  <h3> Please fix these errors: </h3>

  <ul>
    <% @tag.errors.full_messages.each do |message| %>
       <li><%= message %> </li>
    <% end %>
  </ul>
<% end %>

<form action="/tags"  method="post">
  <label for="tag_name">Tag</label>
  <input id="tag_name" name="name" type = "text" value="<%= @tag.name %>">

  <button>Submit</button>
</form>
